{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Pavlok Touch Grass",
  "version": "0.1.0",
  "identifier": "com.afaustov.pavlok-touch-grass",
  "build": {
    "frontendDist": "../src",
    "beforeDevCommand": "npm run dev:web",
    "devUrl": "http://127.0.0.1:1420"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Pavlok: Touch Grass",
        "width": 360,
        "height": 382,
        "minWidth": 340,
        "minHeight": 382,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "backgroundColor": "#00000000",
        "visible": true,
        "skipTaskbar": true,
        "shadow": false,
        "additionalBrowserArgs": "--disable-features=msWebOOUI,msWebOOUIBranding --disable-windows10-custom-titlebar"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": false,
    "targets": [],
    "icon": [
      "icons/icon.png",
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
